{
  "name": "@fcc-china/ows",
  "version": "2.4.0",
  "description": "欢迎来到 freeCodeCamp 中文社区！与编程爱好者们一起探索全国不同城市的线下技术社区，从技术交流到结对编程，与我们一起分享，共同成长。",
  "private": true,
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-brands-svg-icons": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.6",
    "@giscus/react": "^3.1.0",
    "idea-react": "^2.0.0-rc.13",
    "koajax": "^3.1.2",
    "less": "^4.4.2",
    "less-loader": "^12.3.0",
    "lodash": "^4.17.21",
    "marked": "^17.0.0",
    "mobx": "^6.15.0",
    "mobx-github": "^0.6.2",
    "mobx-i18n": "^0.7.2",
    "mobx-react": "^9.2.1",
    "mobx-restful": "^2.1.4",
    "mobx-restful-table": "^2.5.5",
    "next": "^16.0.1",
    "next-pwa": "~5.6.0",
    "next-ssr-middleware": "^1.0.3",
    "next-with-less": "^3.0.1",
    "react": "^19.2.0",
    "react-bootstrap": "^2.10.10",
    "react-dom": "^19.2.0",
    "undici": "^7.16.0",
    "web-utility": "^4.6.4"
  },
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "^7.28.0",
    "@babel/plugin-transform-typescript": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@cspell/eslint-plugin": "^9.3.0",
    "@eslint/js": "^9.39.1",
    "@next/eslint-plugin-next": "^16.0.1",
    "@softonus/prettier-plugin-duplicate-remover": "^1.1.2",
    "@stylistic/eslint-plugin": "^5.5.0",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/lodash": "^4.17.20",
    "@types/next-pwa": "^5.6.9",
    "@types/node": "^22.19.0",
    "@types/react": "^19.2.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "prettier-plugin-css-order": "^2.1.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "resolutions": {
    "next": "$next"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp",
      "unrs-resolver"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid",
    "plugins": [
      "prettier-plugin-css-order",
      "@softonus/prettier-plugin-duplicate-remover"
    ]
  },
  "lint-staged": {
    "*.{html,md,less,json,yml,js,mjs,ts,tsx}": "prettier --write",
    "*.{js,mjs,ts,tsx}": "eslint --fix"
  },
  "scripts": {
    "prepare": "husky || true",
    "dev": "next dev --webpack",
    "build": "next build --webpack",
    "start": "next start",
    "test": "lint-staged  &&  tsc --noEmit",
    "pack-image": "docker build -t freecodecamp-china/web-site:latest .",
    "container": "docker rm -f web-site  &&  docker run --name web-site -p 3000:3000 -d freecodecamp-china/web-site:latest"
  }
}
